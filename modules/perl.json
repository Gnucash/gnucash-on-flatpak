{
    "name": "perl-with-finance-quote",
    "modules": [
        {
            "name": "perl",
            "no-autogen": true,
            "config-opts": [
                "-des",
                "-Duseshrplib"
            ],
            "build-options": {
                "cflags": "-fPIC",
                "ldflags": "-fpic"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.cpan.org/src/5.0/perl-5.42.0.tar.xz",
                    "sha256": "73cf6cc1ea2b2b1c110a18c14bbbc73a362073003893ffcedc26d22ebdbdd0c3"
                },
                {
                    "type": "script",
                    "dest-filename": "configure",
                    "commands": [
                        "exec ./configure.gnu $@"
                    ]
                }
            ],
            "post-install": [
                "chmod -R u+w /app/lib/perl5"
            ]
        },
        {
            "name": "finance-quote",
            "buildsystem": "simple",
            "build-commands": [
                "perl-libs/install.sh"
            ],
            "sources": [
                "./finance-quote-sources.json"
            ],
            "post-install": [
                "chmod -Rf u+w /app/lib/perl5/site_perl"
            ]
        }
    ]
}
